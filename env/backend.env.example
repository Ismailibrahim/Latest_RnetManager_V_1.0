APP_NAME=RentApplicaiton
APP_ENV=local
APP_DEBUG=true
APP_URL=${APP_URL:-http://localhost:8000}

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=${DB_HOST:-127.0.0.1}
DB_PORT=${DB_PORT:-3306}
DB_DATABASE=${DB_DATABASE:-rentapp}
DB_USERNAME=${DB_USERNAME:-root}
DB_PASSWORD=${DB_PASSWORD:-}

# Frontend Configuration
FRONTEND_URL=${FRONTEND_URL:-http://localhost:3000}

# CORS Configuration
# CORS origins: CSV list; set your domain(s) when deploying behind Nginx
# Production example: CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# Leave empty to use default localhost values
CORS_ALLOWED_ORIGINS=${CORS_ALLOWED_ORIGINS:-}

# Sanctum Configuration
# Production example: SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com,localhost:3000
# Leave empty to use default localhost values
SANCTUM_STATEFUL_DOMAINS=${SANCTUM_STATEFUL_DOMAINS:-}

# Currency Configuration
CURRENCY_PRIMARY=${CURRENCY_PRIMARY:-MVR}
CURRENCY_SECONDARY=${CURRENCY_SECONDARY:-USD}

# File Upload Configuration
# Max upload size for tenant documents in kilobytes (default 20MB)
TENANT_DOC_MAX_KB=${TENANT_DOC_MAX_KB:-20480}

